	# Use values that are defined after function pointer definition
	fp.print42 = ($lvl) -> {
		func.printTerminal($lvl, $test42)
		func.printError() # No error should occur:
		                  #   If the variable $test42 is not defined:
		                  #     "$test42" will be printed
